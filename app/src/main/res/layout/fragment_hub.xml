<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleView"
        android:layout_centerHorizontal="true"
        android:gravity="start|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginTop="75dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Connect to your Helio Hub device"
        app:drawableRightCompat="@drawable/hub"
        android:drawablePadding="5dp"
        />

    <TextView
        android:id="@+id/explanation"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        android:text="Enter your Hub's IP address to get started:"
        />

    <LinearLayout
        android:id="@+id/connectionForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/explanation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        >

        <!--    One EditText element for each 8bit number in IPv4 address    -->
        <EditText
            android:id="@+id/hubAddress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:hint="255"
            android:inputType="numberDecimal"
            android:importantForAutofill="no" />
        <TextView
            android:gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="."
            />
        <EditText
            android:id="@+id/hubAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:hint="255"
            android:inputType="numberDecimal"
            android:importantForAutofill="no" />
        <TextView
            android:gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="."
            />
        <EditText
            android:id="@+id/hubAddress3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:hint="255"
            android:inputType="numberDecimal"
            android:importantForAutofill="no" />
        <TextView
            android:gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="."
            />
        <EditText
            android:id="@+id/hubAddress4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:hint="255"
            android:inputType="numberDecimal"
            android:importantForAutofill="no" />

        <!--    connection button    -->
        <Button
            android:id="@+id/hubConnectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Connect"
            />

    </LinearLayout>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@id/connectionStatus"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Connection status"
        />

    <TextView
        android:id="@+id/connectionStatus"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:text="not connected"
        app:drawableLeftCompat="@android:drawable/ic_delete"
        android:drawablePadding="2dp"
        android:gravity="start|center_vertical"
        />

</RelativeLayout>
